<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="start"
android:orientation="horizontal"
android:windowSoftInputMode="stateHidden"
android:background="#000000"
tools:context=".USBHIDTerminal">


    <Button
        android:id="@+id/btnSendText"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="151dp"
        android:minHeight="36dip"
        android:minWidth="50dip"
        android:text="Send"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1">

    </Button>

    <Button
    android:id="@+id/btnSelectHIDDevice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="36dip"
    android:minWidth="50dip"
    android:text="@string/selectHIDDevice"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:textColor="#FFFF00"
    tools:layout_constraintBaseline_creator="1"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="49dp">

</Button>


    <RadioButton
    android:id="@+id/rbSendData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sendData"
    android:textColor="#FFFF00"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:checked="false"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="95dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

</RadioButton>


    <SeekBar
        android:id="@+id/sld_LED0int"
        android:layout_width="498dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="50dp"
        android:progress="0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/sld_RG2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="51dp">

    </SeekBar>

    <SeekBar
        android:id="@+id/sld_LED1int"
        android:layout_width="498dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="50dp"
        android:progress="0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sld_LED0int"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </SeekBar>

    <SeekBar
        android:id="@+id/sld_LED2int"
        android:layout_width="498dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="50dp"
        android:progress="0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sld_LED1int"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </SeekBar>


    <SeekBar
        android:id="@+id/sld_RG1"
        android:layout_width="166dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:progress="0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_circleA"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </SeekBar>

    <SeekBar
        android:id="@+id/sld_RG2"
        android:layout_width="166dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:progress="0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_circleB"
        android:layout_marginLeft="217dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </SeekBar>

    <SeekBar
        android:id="@+id/sld_RG3"
        android:layout_width="166dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:max="255"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:progress="0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_circleC"
        android:layout_marginLeft="383dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </SeekBar>

    <ImageView
        android:id="@+id/iv_circleC"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:src="#FF0000"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="383dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/iv_circleB"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:src="#FF0000"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="217dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </ImageView>

<ImageView
    android:layout_width="166dp"
    android:layout_height="166dp"
    android:id="@+id/iv_circleA"
    android:src="#FF0000"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginLeft="51dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="1dp">

</ImageView>

<CheckBox
    android:text="Anomaloscope Attached"
    android:layout_width="219dp"
    android:layout_height="36dp"
    android:textColor="#FFFF00"
    android:id="@+id/chk_USBattached"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    tools:layout_editor_absoluteY="851dp" />

    <EditText
        android:id="@+id/edtxtHidInput"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text=""
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>