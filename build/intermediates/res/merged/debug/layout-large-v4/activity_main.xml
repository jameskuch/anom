<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="start"
android:orientation="horizontal"
android:windowSoftInputMode="stateHidden"
android:background="#000000"
tools:context=".USBHIDTerminal">


<Button
    android:id="@+id/btnSelectHIDDevice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="36dip"
    android:minWidth="50dip"
    android:text="@string/selectHIDDevice"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:textColor="#FFFF00"
    app:layout_constraintBaseline_toBaselineOf="@+id/btnSend"
    tools:layout_constraintBaseline_creator="1"
    tools:layout_editor_absoluteX="0dp">

</Button>


    <Button
    android:id="@+id/btnSend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:enabled="false"
    android:minHeight="36dip"
    android:text="@string/send"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:textColor="#FFFF00"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/btnSelectHIDDevice">

    <requestFocus />
</Button>



<EditText
    android:id="@+id/edtxtHidInput"
    android:layout_width="217dp"
    android:layout_height="36dp"
    android:inputType="text"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:textColor="#FFFF00"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnSelectHIDDevice"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="376dp"
    android:layout_marginRight="376dp">

</EditText>


<RadioButton
    android:id="@+id/rbSendData"
    android:layout_height="36dp"
    android:text="@string/sendData"
    android:textColor="#FFFF00"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:checked="false"
    app:layout_constraintVertical_bias="0.0"
    tools:layout_editor_absoluteY="0dp"
    android:layout_marginStart="72dp"
    app:layout_constraintLeft_toRightOf="@+id/btnSelectHIDDevice"
    android:layout_marginLeft="72dp"
    android:layout_width="200dp">

</RadioButton>


    <ImageView
    android:layout_width="0dp"
    android:layout_height="166dp"
    android:id="@+id/iv_circleC"
    android:src="#FF0000"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="@+id/iv_circleB"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/iv_circleB"
    android:layout_marginBottom="56dp"
    app:layout_constraintHorizontal_bias="0.0">

</ImageView>

<ImageView
    android:layout_width="0dp"
    android:layout_height="166dp"
    android:id="@+id/iv_circleB"
    android:src="#FF0000"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/iv_circleC"
    app:layout_constraintRight_toRightOf="@+id/iv_circleA"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/iv_circleA"
    app:layout_constraintHorizontal_bias="0.0">

</ImageView>

<ImageView
    android:layout_width="166dp"
    android:layout_height="166dp"
    android:id="@+id/iv_circleA"
    android:src="#FF0000"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/iv_circleB"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent">

</ImageView>

<CheckBox
    android:text="Anomaloscope Attached"
    android:layout_width="192dp"
    android:layout_height="49dp"
    android:textColor="#FFFF00"
    android:id="@+id/chk_USBattached"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteY="0dp"
    app:layout_constraintHorizontal_bias="1.0" />

    <ImageButton
        android:src="@drawable/button_onearrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_0"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="184dp" />

    <ImageButton
        android:src="@drawable/button_twoarrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_1"
        android:layout_marginEnd="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="184dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_2"
        android:layout_marginBottom="13dp" />

    <ImageButton
        android:src="@drawable/button_onearrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_2"
        android:layout_marginEnd="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="184dp"
        app:layout_constraintVertical_bias="0.33"
        app:layout_constraintBottom_toTopOf="@+id/btn_3"
        android:layout_marginBottom="13dp" />

    <ImageButton
        android:src="@drawable/button_twoarrows"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/btn_3"
        android:layout_marginEnd="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="184dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        android:layout_marginBottom="13dp" />

    <ImageButton
        android:src="@drawable/button_onearrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_4"
        android:layout_marginEnd="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="184dp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp" />

    <ImageButton
        android:src="@drawable/button_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Begin"
        android:layout_marginStart="184dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:id="@+id/txt_TimerView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/edtxtHidInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/rbSendData"
        android:layout_marginTop="44dp" />

    <Button
        android:text="stop"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Timer"
        app:layout_constraintTop_toTopOf="@+id/chk_USBattached"
        android:layout_marginTop="56dp"
        android:layout_marginStart="408dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="408dp" />


</android.support.constraint.ConstraintLayout>